                    android:background="@drawable/cell_border"
                    android:id="@+id/task_5.2"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_5.3"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_5.3"
                    />
            </TableRow>

        </TableLayout>


    <Button
        android:id="@+id/save_sticker_sheet_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Sticker Sheet"
        app:layout_constraintTop_toBottomOf="@id/sticker_sheet_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>
