<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_sticker_sheet"
    tools:context=".NewStickerSheetActivity">


    <!-- EditText for Sticker Sheet Title -->
    <EditText
        android:id="@+id/sticker_sheet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/sticker_sheet_title_hint"
        android:textSize="24sp"
        android:inputType="textCapSentences"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="Autofill"
        android:background="@drawable/cell_border"
        android:textColorHint="@color/black"
        android:minHeight="48dp"
        android:minWidth="48dp"
        />

    <Button
        android:id="@+id/background_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Color"
        app:layout_constraintTop_toBottomOf="@id/sticker_sheet_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_color_button"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/text_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Color"
        app:layout_constraintTop_toBottomOf="@id/sticker_sheet_title"
        app:layout_constraintStart_toEndOf="@id/background_color_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Table for tasks and categories -->

        <TableLayout
            android:id="@+id/sticker_sheet_table"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:shrinkColumns="0,1,2,3"
            android:stretchColumns="1,2,3,4"
            app:layout_constraintTop_toBottomOf="@id/sticker_sheet_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.66"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/cell_border">

            <!-- First row -->
            <TableRow>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/category_1"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/category_1"
                    />
                <EditText
                    android:hint="@string/task_1.1"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_1.1"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_1.2"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_1.2"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_1.3"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_1.3"
                    />
            </TableRow>

            <!-- Second row -->
            <TableRow>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/category_2"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
