                    android:minHeight="100dp"
                    android:hint="@string/task_2.1"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_2.1"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_2.2"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_2.2"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_2.3"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_2.3"
                    />
            </TableRow>

            <!-- Third row -->
            <TableRow>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/category_3"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/category_3"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_3.1"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_3.1"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_3.2"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_3.2"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_3.3"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_3.3"
                    />
            </TableRow>

            <!-- Fourth row -->
            <TableRow>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/category_4"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/category_4"
                    />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minWidth="100dp"
                    android:minHeight="100dp"
                    android:hint="@string/task_4.1"
                    tools:ignore="Autofill"
                    android:textColorHint="@color/black"
                    android:inputType="textMultiLine|textCapSentences"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:background="@drawable/cell_border"
                    android:id="@+id/task_4.1"
